<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
	<include layout="@layout/message_date_section" />
	
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|end"
        android:layout_marginLeft="@dimen/message_horizontal_margin"
        android:layout_marginStart="@dimen/message_horizontal_margin">
	
		<ProgressBar
			android:id="@+id/message_sending_progress"
			style="?android:attr/progressBarStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" />
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:background="@drawable/msg_out"
			android:orientation="vertical">
	    
			<include layout="@layout/message_view" />
		</LinearLayout>
	</LinearLayout>
</merge>